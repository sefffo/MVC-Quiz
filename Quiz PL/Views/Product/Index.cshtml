@model IEnumerable<Quiz.DAL.Models.Products.Product>

@{
    ViewData["Title"] = "Products";
}

<h2 class="text-center mt-3 mb-4">Products List</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">➕ Add New Product</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">No products found.</div>
}
else
{
    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Category Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@item.CategoryId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
