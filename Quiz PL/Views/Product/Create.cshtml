@model Quiz.DAL.Models.Products.Product

@{
    ViewData["Title"] = "Create Product";
}

<h2 class="text-center mt-3 mb-4">Add New Product</h2>

<form asp-action="Create" asp-controller="Product" method="post" class="w-50 mx-auto border p-4 shadow-sm rounded bg-light">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category Id</label>
        <input asp-for="CategoryId" class="form-control" />
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">💾 Save</button>
    <a asp-action="Index" class="btn btn-secondary w-100 mt-2">↩️ Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
